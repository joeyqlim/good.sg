<div class="container text-center full-page">
<div class="row mt-3">
  <div class="col-md-10 mx-auto">
    <h6>Posts under the "<%= categorized.name %>" category</h6>
    <% categorized.posts.slice().reverse().forEach((post)=>{ %>
      <div class="card" id="load-posts">
        <div class="card-body d-flex">
          <div class="avatar-div">
            <img src="<%= post.author.avatar %>" alt="default" class="img-thumbnail img-fluid" id="post-avatar"/>
          </div>
          <div class="post-div">
            <p class="card-subtitle mb-2 text-muted small text-left"><%= moment(post.postDate).format("[posted on] dddd D MMMM YYYY [at] h:mm a") %></p>
            <p class="text-left"><span class="font-weight-bold"><%= post.author.username %>: </span><span class="post-text"><%= post.text %></span></p>
          </div>       
        </div>
      </div>
    <% }) %>
  </div>
</div>
</div>
