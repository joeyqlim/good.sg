</head>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <img src="/img/plant.png" alt="icon" class="navbar-brand" style="width: 30px;"> 
  <a class="navbar-brand navbar-custom" href="/">good.sg</a>

  <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
    <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
      <% if(currentUser) { %>
        <li class="nav-item">
          <a class="nav-link" href="/user/posts">My Posts</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/profile">My Profile</a>
        </li>
          <% if(currentUser.isAdmin) { %>
          <li>
            <a class="nav-link" href="/category/new">Categories</a>
          </li>
          <li>
            <a class="nav-link" href="/user/view">Users</a>
          </li>
          <% } %>
        <li class="nav-item">
          <a class="nav-link" href="/auth/signout">Sign out</a>
        </li>
      <% } else { %>
      <li class="nav-item">
        <a class="nav-link" href="/auth/signin">Sign in</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/auth/signup">Sign up</a>
      </li>
      <% } %>
    </ul>
  </div>
</nav>
<body>
  <% if(alerts.error) { %>
    <% alerts.error.forEach(message => { %>
      <div class="alert alert-danger mb-0">
        <%= message %>
      </div>
  <% })} %>

  <% if(alerts.success) { %>
    <% alerts.success.forEach(message => { %>
      <div class="alert alert-success mb-0">
        <%= message %>
      </div>
  <% })} %>
  
    <%- body %>
  
<footer class="navbar navbar-static-bottom">
  <div class="container mx-auto">
