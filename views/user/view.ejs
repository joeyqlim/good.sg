<div class="container text-center full-page">
  <div class="row mt-3">
    <div class="col-md-10 mx-auto">
      <h2>All users</h2>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">Username</th>
            <th scope="col">Account Type</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((user)=> { %>
            <tr>
              <td><%= user.username %></td>
              <td><%= user.isAdmin ? "Admin" : "User" %></td>
              <td>
                <a href="/user/profile/<%= user._id %>/<%= user.isAdmin ? "removeadmin" : "makeadmin" %>">
                <%= user.isAdmin ? "Remove Admin" : "Make Admin" %>
                </a>
              </td>
            </tr>
          <% }) %>
          
        </tbody>
      </table>
    </div>
  </div>
</div>