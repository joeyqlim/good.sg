<div class="container text-center">
  <div class="row mt-3">
    <div class="col-md-10 mx-auto">
      <h2><%= user.username %>'s profile</h2>
      
      <img src="/img/defaultuser.svg" alt="default" class="img-thumbnail img-fluid"/><br><br>

      <!-- Upload new profile picture -->
      <%= typeof msg != 'undefined' ? msg : '' %>

    <form action="/user/profile/upload" enctype="multipart/form-data" method="POST"> 
      <div class="input-group col-5 mx-auto">
        <div class="custom-file">
          <input type="file"class="custom-file-input" id="inputGroupFile04" name="avatar" accept="image/*"/>
          <label class="custom-file-label" for="inputGroupFile04"></label>
        </div>
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="submit">Upload</button>
        </div>
      </div>
    </form>



      <!-- Display the uploaded resized picture for testing purposes -->
      <img src="<%= user.avatar %>" alt="avatar">
    </div>
  </div>
</div>
