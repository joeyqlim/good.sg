
<div class="container text-center">
  <h2>Hello, <%= username %>. Ready to inspire?</h2>
  <div class="row mt-4">
    <div class="col-md-9 mx-auto">
      <form action="/user/createpost" method="POST">
        <div class="input-group mb-3">
          <input name="text" type="text" class="form-control" maxlength="200" placeholder="max. 200 characters" aria-label="Post input box" aria-describedby="button-addon2">
          <div class="input-group-prepend">
            <select name="category" id="category-selector" class="btn btn-outline-secondary dropdown-toggle">
              <option value="">Select Category</option>
              <% categories.forEach((category)=>{ %>
                <option value="<%= category._id %>"><%= category.name %></option>
                <% }) %>
            </select>
          </div>
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit" id="button-addon2">&#128238;
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>


  <div class="row mt-3">
    <div class="col-md-10 mx-auto">
      <h6>All Posts</h6>
      <% allPosts.slice().reverse().forEach((post)=>{ %>
        <div class="card">
          <div class="card-body">
            <p class="card-subtitle mb-2 text-muted small text-left"><%= post.postDate %></p>
            <p class="text-left"><span class="font-weight-bold"><%= post.author.username %>: </span><span class="post-text"><%= post.text %></span></p>
            <a href="/category/view/<%= post.category._id %>" class="badge badge-pill"><%= post.category.name %></a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>
