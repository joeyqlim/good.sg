<div class="container text-center">
  <div class="row mt-3">
    <div class="col-md-10 mx-auto">
      <h6>Your posts</h6>
      <% posts.posts.slice().reverse().forEach((post)=>{ %>
        <div class="card">
          <div class="card-body">
            <p class="card-subtitle mb-2 text-muted small text-left">
              <%= post.postDate %> 
              
              <button class="delete-btn btn btn-sm btn-outline-danger" data-toggle="modal" data-target="#deleteModal"><span><i class="fa fa-trash-o" aria-hidden="true"></i></span>
              </button>
              <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Delete this post?</h5>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                      <form
                      method="POST"
                      style="display: inline;"
                      action="/user/posts/delete/<%= post._id %>?_method=DELETE">
                      <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    </div>
                  </div>
                </div>
              </div>

            </p>
            <p class="text-left"><span class="font-weight-bold"><%= posts.username %>: </span><span class="post-text"><%= post.text %></span></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  </div>

  
